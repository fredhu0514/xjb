<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    android:orientation="vertical"
    tools:context="app.xunxun.homeclock.activity.SettingsActivity">

    <RelativeLayout
        android:id="@+id/backRl"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#000"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="#fff"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/ampmTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="AM"
                android:textColor="#fff"
                android:textSize="30sp"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dateLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dateTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-00-00"
                    android:textColor="#fff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/weekTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="周日"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lunarTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/batteryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="电量:100%"
            android:textColor="#fff"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/textSpaceEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:gravity="center_horizontal"
            android:hint="写写"
            android:maxLines="2"
            android:textColor="#fff"
            android:textColorHint="@color/grey_500"
            android:textSize="24sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/activity_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/backgroundColorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:padding="16dp"
                android:text="更改背景色"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <TextView
                android:id="@+id/textColorTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:padding="16dp"
                android:text="更改字体颜色"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <RadioGroup
                android:id="@+id/timeStyleRg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/time_12Rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="12小时制"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/time_24Rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="24小时制"
                    android:textSize="18sp" />
            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <CheckBox
                android:id="@+id/showDateCb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="显示日期"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <CheckBox
                android:id="@+id/showWeekCb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="显示星期"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <CheckBox
                android:id="@+id/showLunarCb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="显示农历"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />


            <CheckBox
                android:id="@+id/showBatteryCb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="显示电量"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <TextView
                android:id="@+id/textSizeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="8dp"
                android:text="更改字体大小"
                android:textColor="@color/grey_800"
                android:textSize="18sp"
                android:visibility="gone" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="32dp"
                android:background="@color/grey_400" />

            <CheckBox
                android:id="@+id/keepScreenOnCb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="保持屏幕常亮"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <CheckBox
                android:id="@+id/setLauncherCb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="设为桌面启动器"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <CheckBox
                android:id="@+id/enableShakeFeedbackCb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="摇一摇反馈"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="32dp"
                android:background="@color/grey_400" />

            <TextView
                android:id="@+id/feedbackTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:padding="16dp"
                android:text="意见反馈"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="32dp"
                android:background="@color/grey_400" />

            <TextView
                android:id="@+id/supportTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/press_item"
                android:padding="16dp"
                android:text="求打赏"
                android:textColor="@color/grey_800"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey_400" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>


